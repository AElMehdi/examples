CREATE STREAM locations (id bigint, city varchar, value bigint) WITH (kafka_topic='locations', value_format='DELIMITED');
CREATE TABLE count_per_city WITH (KAFKA_TOPIC='COUNT_PER_CITY', PARTITIONS=6) AS SELECT city, count(*) FROM locations GROUP BY city;
CREATE TABLE sum_per_city WITH (KAFKA_TOPIC='SUM_PER_CITY', PARTITIONS=6, VALUE_FORMAT='AVRO') AS SELECT city, sum(value) FROM locations GROUP BY city;
